<p id="notice"><%= notice %></p>

<main role="main">

  <section class="jumbotron text-center">
    <div class="container">
      <h1 class="jumbotron-heading text-white">FreeShelf</h1>
      <p class="lead text-white">Free Online Programming Books</p>
    </div>
  </section>

  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row">
        <% @books.each do |book| %>
          <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
              <% begin %>
                <%= image_tag book.image.url %>
              <% rescue %>
              <% end %>
              <div class="card-body">
                <h4 class="text-center"><a href=<%= book.url %> ><%= book.title %></a></h4>
                <h6 class="text-center">By <%= book.author %></h6>
                <div class="d-flex justify-content-between align-items-center">
                  <%= link_to 'Show', book, { :class=>"btn btn-secondary text-white" } %>
                  <%= link_to 'Edit', edit_book_path(book) , {:class=>"btn btn-secondary text-white"  }%>
                  <%= link_to 'Delete', book, method: :delete, :class=>"btn btn-secondary text-white" ,data: { confirm: 'Are you sure?' } %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>

<%= link_to 'New Book', new_book_path %>

<p>
  Download:
  <%= link_to "CSV", books_path(format: "csv") %>
</p>

<footer class="text-muted">
  <div class="container">
    <p class="float-right">
      <a href="#">Back to top</a>
    </p>
    <p>&copy; FreeShelf</p>
  </div>
</footer>



